<dataConfig>
<dataSource type="JdbcDataSource" 
            driver="com.mysql.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/clubu" 
            user="root" 
            password="root"/>
<document>
  <entity name="club"  
    pk="id"
    query="select id,name,description from club"
    deltaImportQuery="SELECT id,name,description from clubu WHERE id='${dih.delta.id}'"
    deltaQuery="SELECT id FROM product WHERE time_updated > '${dih.last_index_time}'"
    >
     <field column="id" name="id"/>
     <field column="name" name="name"/>       
     <field column="description" name="description"/>       
  </entity>
</document>
</dataConfig>

